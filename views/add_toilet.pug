extends layout

block content
    form.form-group(method="POST", action="/toilets/add")
        label Place: 
        input.form-control(type="text", name="place")
        br
        h3 Address: 
        br
        label Streetname: 
        input.form-control(type="text", name="street")
        label Number: 
        input.form-control(type="text", name="number")
        label Zipcode: 
        input.form-control(type="text", name="zipcode")
        label City: 
        input.form-control(type="text", name="city")
        label Country: 
        input.form-control(type="text", name="country")
        br
        input.btn.btn-primary(type="submit", value="Add")