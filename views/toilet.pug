extends layout

block content
    .toilet-image(style='background-image: url("' + toilet.imagePath + '")')
        h2= toilet.place
        p overall Rating: #{average}
        li.list-group-item= toilet.address.number + " " + toilet.address.street
        li.list-group-item= toilet.address.zipcode + " " + toilet.address.city
        li.list-group-item= toilet.address.country
    a.btn.btn-info(href="/") Back
    a.btn.btn-primary(href="/toilets/edit/" + toilet._id) Edit
    a.btn.btn-danger.delete-toilet(href="#", data-id=toilet._id) Delete
    
